{
  "name": "subdomain-storage-sync",
  "version": "2.0.0",
  "description": "Lightweight JavaScript library for syncing localStorage and sessionStorage across subdomains using cookies",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "jest tests/",
    "lint": "eslint src/index.js",
    "build": "npm run lint && npm run minify",
    "minify": "terser src/index.js -o dist/index.min.js --compress --mangle",
    "copy": "cp src/index.js dist/index.js",
    "prepare": "npm run copy && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkramp/subdomain-storage-sync.git"
  },
  "keywords": [
    "localStorage",
    "sessionStorage",
    "subdomain",
    "cookie",
    "sync",
    "cross-domain",
    "browser",
    "storage",
    "javascript",
    "vanilla-js",
    "middleware"
  ],
  "author": "jkramp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jkramp/subdomain-storage-sync/issues"
  },
  "homepage": "https://github.com/jkramp/subdomain-storage-sync#readme",
  "files": [
    "src/index.js",
    "dist/index.js",
    "dist/index.min.js",
    "types/index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=12"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "terser": "^5.0.0"
  }
}